package com;
import java.util.Scanner;
class Developer
{
	Scanner sc = new Scanner(System.in);
	int id;
	String name;
	int age;
	int salary = 80000;
	String desig="Developer";
	public Developer() {
		System.out.print("ID : ");  id = sc.nextInt();
		System.out.print("Name : ");  name = sc.next();
		System.out.print("Age : ");  age = sc.nextInt();
//		System.out.print("Salary : ");  salary = sc.nextInt();
//		System.out.print("Designation : ");  desig = sc.next();
	}
	void display() {
		System.out.println("ID : "+ id);
		System.out.println("Name : "+name); 
		System.out.println("Age : "+ age);
		System.out.println("Salary : "+salary);
		System.out.println("Designation : "+desig);
	}
}
class Tester 
{
	Scanner sc = new Scanner(System.in);
	int id;
	String name;
	int age;
	int salary = 60000;
	String desig="Tester";
	public Tester() {
		System.out.print("ID : ");  id = sc.nextInt();
		System.out.print("Name : ");  name = sc.next();
		System.out.print("Age : ");  age = sc.nextInt();
	}
	void display() {
		System.out.println("ID : "+ id);
		System.out.println("Name : "+name); 
		System.out.println("Age : "+ age);
		System.out.println("Salary : "+salary);
		System.out.println("Designation : "+desig);
	}
}
