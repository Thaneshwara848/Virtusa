package com;

class I
{
	//final int a =1000;		we can re assign the values ( like in c --> const ) 
	 int a =1000;
	I(){
		int a =100 ;				// its a local var 
		System.out.println("Local :"+ a);		//100
		System.out.println("Globle varibale : "+ this.a);	//1000 
	}
	void display() {
		System.out.println("method : "+ a);		// 1000
	}
}
class J
{
	int x=1000;
}
public class Demo2 {
	public static void main(String[] args) {
		
//		Data Types  
//		Local variables
//		Instance variables or Member variables or Global variables
//		Static variables or Class variables
//		Final variables
		
		I i = new I();
		i.display();
		System.out.println("Main :" + i.a);	// 1000 
		i.a=2000;
		System.out.println("Modified  :" + i.a);	//2000 , but i dont want anybody to modify it
		
		
//		J j = new J();							// with creating a obj , we are wasting a memnory 
//		System.out.println("JJJJJJJJJ : "+ j.x);
		
		System.out.println("JJJ : "+ x );
	}
}
